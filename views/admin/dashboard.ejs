    <script>
        document.addEventListener('DOMContentLoaded', function() {
        const ctxDaily = document.getElementById('dailySalesChart').getContext('2d');
        const ctxWeekly = document.getElementById('weeklySalesChart').getContext('2d');
        const ctxMonthly = document.getElementById('monthlySalesChart').getContext('2d');
        const ctxYearly = document.getElementById('yearlySalesChart').getContext('2d');

        function validateChartData(data) {
            return data && Array.isArray(data.labels) && Array.isArray(data.data) && data.labels.length === data.data.length;
        }

        function createChart(ctx, salesData, label, chartType = 'line') {
            if (validateChartData(salesData)) {
                return new Chart(ctx, {
                    type: chartType,
                    data: {
                        labels: salesData.labels,
                        datasets: [{
                            label: label,
                            data: salesData.data,
                            fill: true,
                            backgroundColor: 'rgba(75,192,192,0.2)',
                            borderColor: 'rgba(75,192,192,1)',
                            borderWidth: 1,
                            pointBackgroundColor: 'rgba(75,192,192,1)'
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            } else {
                console.error(`Invalid ${label} sales data`);
            }
        }

        const dailySalesData = JSON.parse(document.getElementById('showDailyChart').getAttribute('data-sales'));
        const weeklySalesData = JSON.parse(document.getElementById('showWeeklyChart').getAttribute('data-sales'));
        const monthlySalesData = JSON.parse(document.getElementById('showMonthlyChart').getAttribute('data-sales'));
        const yearlySalesData = JSON.parse(document.getElementById('showYearlyChart').getAttribute('data-sales'));

        const dailySalesChart = createChart(ctxDaily, dailySalesData, 'Daily Sales');
        const weeklySalesChart = createChart(ctxWeekly, weeklySalesData, 'Weekly Sales');
        const monthlySalesChart = createChart(ctxMonthly, monthlySalesData, 'Monthly Sales');
        const yearlySalesChart = createChart(ctxYearly, yearlySalesData, 'Yearly Sales', 'bar');

        function setActiveButton(buttonId) {
            document.querySelectorAll('.chart-btn').forEach(button => {
                button.classList.remove('active');
            });
            document.getElementById(buttonId).classList.add('active');
        }

        document.getElementById('showDailyChart').addEventListener('click', () => {
            document.getElementById('dailySalesChart').style.display = 'block';
            document.getElementById('weeklySalesChart').style.display = 'none';
            document.getElementById('monthlySalesChart').style.display = 'none';
            document.getElementById('yearlySalesChart').style.display = 'none';
            setActiveButton('showDailyChart');
        });

        document.getElementById('showWeeklyChart').addEventListener('click', () => {
            document.getElementById('dailySalesChart').style.display = 'none';
            document.getElementById('weeklySalesChart').style.display = 'block';
            document.getElementById('monthlySalesChart').style.display = 'none';
            document.getElementById('yearlySalesChart').style.display = 'none';
            setActiveButton('showWeeklyChart');
        });

        document.getElementById('showMonthlyChart').addEventListener('click', () => {
            document.getElementById('dailySalesChart').style.display = 'none';
            document.getElementById('weeklySalesChart').style.display = 'none';
            document.getElementById('monthlySalesChart').style.display = 'block';
            document.getElementById('yearlySalesChart').style.display = 'none';
            setActiveButton('showMonthlyChart');
        });

        document.getElementById('showYearlyChart').addEventListener('click', () => {
            document.getElementById('dailySalesChart').style.display = 'none';
            document.getElementById('weeklySalesChart').style.display = 'none';
            document.getElementById('monthlySalesChart').style.display = 'none';
            document.getElementById('yearlySalesChart').style.display = 'block';
            setActiveButton('showYearlyChart');
        });

        document.getElementById('showDailyChart').click(); // Display daily chart by default
    });

    </script>



