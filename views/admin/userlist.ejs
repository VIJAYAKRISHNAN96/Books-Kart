    <script>

function confirmToggleBlock(userId, isBlocked) {
    const action = isBlocked ? 'unblock' : 'block';
    Swal.fire({
        title: `Are you sure you want to ${action} this user?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes',
        cancelButtonText: 'No'
    }).then((result) => {
        if (result.isConfirmed) {
            toggleBlockUser(userId);
        }
    });
}

async function toggleBlockUser(userId) {
    try {
        const response = await fetch(`/admin/users/block/${userId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ userId })
        });

        if (response.ok) {
            const data = await response.json();
            // Optionally show a success message
            Swal.fire('Success!', `User has been ${data.isBlocked ? 'blocked' : 'unblocked'}.`, 'success');
            location.reload(); // Reload the page to see changes
        } else {
            const data = await response.json();
            Swal.fire('Error!', data.message, 'error');
        }
    } catch (error) {
        Swal.fire('Error!', 'An error occurred while processing your request.', 'error');
    }
};


        async function toggleBlockUser(userId) {
          try {
            const response = await fetch('/admin/toggleBlockUser', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ userId })
            });
      
            if (response.ok) {
              const data = await response.json();
              const statusSpan = document.getElementById(`status_${userId}`);
              const button = document.querySelector(`button[onclick="toggleBlockUser('${userId}')"]`);
              
              if (data.isBlocked) {
                statusSpan.classList.remove('bg-success');
                statusSpan.classList.add('bg-danger');
                statusSpan.innerText = 'Blocked';
                button.innerText = 'Unblock';
              } else {
                statusSpan.classList.remove('bg-danger');
                statusSpan.classList.add('bg-success');
                statusSpan.innerText = 'Active';
                button.innerText = 'Block';
              }
            } else {
              console.error('Failed to toggle block status');
            }
          } catch (error) {
            console.error('Error:', error);
          }
        };


















        function applyFilters() {
    const searchTerm = document.getElementById('searchInput').value;
    const statusFilter = document.getElementById('statusFilter').value;
    
    // Get the current URL
    let url = new URL(window.location.href);
    
    // Set or update query parameters
    url.searchParams.set('search', searchTerm);
    url.searchParams.set('status', statusFilter);
    
    // If it's the first page, we can optionally remove the page parameter
    url.searchParams.delete('page');
    
    // Navigate to the new URL
    window.location.href = url.toString();
}

// Optional: Add this function to handle pagination clicks
function changePage(page) {
    let url = new URL(window.location.href);
    url.searchParams.set('page', page);
    window.location.href = url.toString();
}

// Call this function when the page loads to set the correct values in the form
function setFormValues() {
    let url = new URL(window.location.href);
    
    document.getElementById('searchInput').value = url.searchParams.get('search') || '';
    document.getElementById('statusFilter').value = url.searchParams.get('status') || '';
}

// Call setFormValues when the page loads
window.onload = setFormValues;
       


    </script>
