<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add New Product</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>

    
    <script>
        function validateForm(event) {
            const imageInputs = document.querySelector('input[type="file"][name="images"]');
            if (imageInputs.files.length > 3) {
                event.preventDefault();
                alert('You can upload a maximum of 3 images per product.');
            }
        }

    </script>
   
  
</head>
<body>
    
<section class="content-main">
    <div class="row">
        <div class="col-6">
            <div class="content-header">
                <h2 class="content-title">Add New Product</h2>
            </div>
        </div>
    </div>
  
    <form action="/admin/addProduct" method="POST" enctype="multipart/form-data" onsubmit="validateForm(event)">
        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <h6>1. General info</h6>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-4">
                                    <label class="form-label">Product title</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="name" required>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" class="form-control" rows="4" name="description" required></textarea>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Author </label>
                                    <textarea placeholder="Type here" class="form-control" rows="4" name="author" required></textarea>
                                    <!-- <select class="form-select" name="brand"> -->
                                        <!-- <option>Adidas</option>
                                        <option>Nike</option>
                                        <option>Puma</option> -->
                                    </select>
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4 mt-0">
                        <div class="row">
                            <div class="col-md-3">
                                <h6>2. Pricing</h6>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-4">
                                    <label class="form-label">Cost in USD</label>
                                    <input type="text" placeholder="$00.0" class="form-control" name="price" required>
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4 mt-0">
                        <div class="row">
                            <div class="col-md-3">
                                <h6>3. Category</h6>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-4">
                                    <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                        <input class="form-check-input" name="category" type="radio" value="Novel" checked>
                                        <span class="form-check-label">Novel</span>
                                    </label>
                                    <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                        <input class="form-check-input" name="category" type="radio" value="Biography">
                                        <span class="form-check-label">Biography</span>
                                    </label>
                                    <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                        <input class="form-check-input" name="category" type="radio" value="Fiction">
                                        <span class="form-check-label">Fiction</span>
                                    </label>
                                    <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                        <input class="form-check-input" name="category" type="radio" value="Travel">
                                        <span class="form-check-label">Travel</span>
                                    </label>
                                    <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                        <input class="form-check-input" name="category" type="radio" value="Others">
                                        <span class="form-check-label">Others</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4 mt-0">
                        <div class="row">
                            <div class="col-md-3">
                                <h6>4. Media</h6>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-4">
                                    <label class="form-label">Images</label>
                                    <input class="form-control" type="file" name="images" id="imageInput" multiple required>
                                </div>
                                <div class="mb-4">
                                    <canvas id="imagePreview" style="max-width: 100%;"></canvas>                               
                                 </div>
        
                                <!-- Hidden input to store cropped image data -->
                                <input type="hidden" id="croppedImage" name="croppedImage">
        
                                <div>
                                    <button class="btn btn-md rounded font-sm hover-up" type="submit">Publish</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<script>
        document.addEventListener('DOMContentLoaded', function () {
        // Select image input and canvas element
        const imageInput = document.getElementById('imageInput');
        const imagePreview = document.getElementById('imagePreview');
        const cropper = new Cropper(imagePreview, {
            aspectRatio: 1, // Set the aspect ratio (square in this case)
            viewMode: 1, // Set to 1 for free crop mode, 0 for fixed crop box
            zoomable: false, // Disable zooming
            ready: function () {
                console.log('Cropper.js is ready');
            }
        });

        // Handle file input change event
        imageInput.addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                // Initialize FileReader to read file as data URL
                const reader = new FileReader();
                reader.onload = function (event) {
                    // Update Cropper.js with new image data
                    cropper.replace(event.target.result);
                };
                reader.readAsDataURL(file);
            } else {
                cropper.replace('');
            }
        });
    });

    document.getElementById('addProductForm').addEventListener('submit', function (event) {
            event.preventDefault();

            // Get cropped image data as base64-encoded string
            const croppedImage = cropper.getCroppedCanvas().toDataURL('image/jpeg');

            // Set the value of hidden input with the cropped image data
            document.getElementById('croppedImage').value = croppedImage;

            // Submit the form
            this.submit();
        });


</script>
</body>
</html>


