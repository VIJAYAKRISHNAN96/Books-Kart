                        <div class="form-group col-md-6">
                            <label for="couponName">Coupon Name</label>
                            <input type="text" class="form-control" id="couponName" placeholder="Enter coupon name">
                            <div class="error-message" id="couponNameError"></div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="couponCode">Coupon Code</label>
                            <input type="text" class="form-control" id="couponCode" placeholder="Enter coupon code">
                            <div class="error-message" id="couponCodeError"></div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="discountAmount">Discount Amount</label>
                            <input type="number" class="form-control" id="discountAmount" placeholder="Enter discount amount">
                            <div class="error-message" id="discountAmountError"></div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="startDate">Start Date</label>
                            <input type="date" class="form-control" id="startDate">
                            <div class="error-message" id="startDateError"></div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="endDate">End Date</label>
                            <input type="date" class="form-control" id="endDate">
                            <div class="error-message" id="endDateError"></div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="minimumAmount">Minimum Amount</label>
                            <input type="number" class="form-control" id="minimumAmount" placeholder="Enter minimum amount">
                            <div class="error-message" id="minimumAmountError"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="statusOptions" id="activeStatus" value="active">
                                <label class="form-check-label" for="activeStatus">Active</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="statusOptions" id="inactiveStatus" value="inactive">
                                <label class="form-check-label" for="inactiveStatus">Inactive</label>
                            </div>
                            <div class="error-message" id="statusError"></div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" id="saveChangesButton">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>




