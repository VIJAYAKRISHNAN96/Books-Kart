<script>
    function confirmDelete(productId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Use AJAX to delete the product from the wishlist
            $.ajax({
                url: '/deleteWishlist',
                method: 'DELETE',
                contentType: 'application/json', // Ensure content type is JSON
                data: JSON.stringify({ productId: productId }), // Send data as JSON string
                success: function(response) {
                    if (response.success) {
                        // Remove the product row from the table
                        $('#product-row-' + productId).remove();
                        Swal.fire('Deleted!', 'Product has been removed from your wishlist.', 'success');
                    } else {
                        Swal.fire('Error!', response.message, 'error');
                    }
                },
                error: function() {
                    Swal.fire('Error!', 'An error occurred while removing the product from your wishlist.', 'error');
                }
            });
        }
    });
}

</script>






