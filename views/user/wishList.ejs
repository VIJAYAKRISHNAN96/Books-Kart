                                    <% if (products && products.length > 0) { %>
                                        <% products.forEach(product => { %>
                                            <% if (product) { %> <!-- Ensure product is not undefined -->
                                                <tr id="product-row-<%= product._id ? product._id : '' %>">
                                                    <td class="image product-thumbnail">
