<style>
  .product-cart-wrap {
    height: 380px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    margin-bottom: 20px;
    padding: 15px;
}

.product-img-action-wrap {
    height: 65%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.product-img {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 8px;
}

.product-img img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}

.product-content-wrap {
    padding: 10px 0;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

/* Rest of the styles remain the same */

.product-category {
    font-size: 14px;
    color: #999;
    margin-bottom: 8px; /* Add space between category and title */
}

.product-content-wrap h2 {
    font-size: 14px; /* Smaller font size for title */
    font-weight: 600;
    line-height: 1.2em;
    height: 2.4em; /* Set a fixed height for title */
    overflow: hidden;
    margin-bottom: 10px;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.product-price {
    font-size: 16px; /* Smaller font size for price */
    font-weight: 700;
    color: #00cc66;
    margin-bottom: 8px; /* Space between price and any buttons or actions */
}

</style>




