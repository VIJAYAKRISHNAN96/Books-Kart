  document.addEventListener('DOMContentLoaded', (event) => {
    // Event listener for quantity up button
    document.querySelectorAll('.qty-up').forEach(button => {
      button.addEventListener('click', function(event) {
        event.preventDefault();
        const productId = this.getAttribute('data-id');
        const qtyElem = document.getElementById(`qty-${productId}`);
        let quantity = parseInt(qtyElem.textContent);
        qtyElem.textContent = ++quantity;
      });
    });
  
    // Event listener for quantity down button
    document.querySelectorAll('.qty-down').forEach(button => {
      button.addEventListener('click', function(event) {
        event.preventDefault();
        const productId = this.getAttribute('data-id');
        const qtyElem = document.getElementById(`qty-${productId}`);
        let quantity = parseInt(qtyElem.textContent);
        if (quantity > 1) {
          qtyElem.textContent = --quantity;
        }
      });
    });
  });
  </script>

